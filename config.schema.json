{
  "pluginAlias": "HomebridgeDummy",
  "pluginType": "platform",
  "singular": true,
  "customUi": true,
  "customUiPath": "./dist/homebridge-ui",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "default": "Homebridge Dummy"
      },
      "legacyAccessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
                "title": "${config.title.name}",
                "type": "string",
                "required": true
            },
            "stateful": {
                "title": "${config.title.stateful}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.stateful}"
            },
            "dimmer": {
                "title": "${config.title.dimmer}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.dimmer}"
            },
            "reverse": {
                "title": "${config.title.reverse}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.reverse}"
            },
            "time": {
                "title": "${config.title.time}",
                "type": "number",
                "default": 1000,
                "description": "${config.description.time}"
            },
            "random": {
                "title": "${config.title.random}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.random}"
            },
            "resettable": {
                "title": "${config.title.resettable}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.resettable}"
            },
            "brightness": {
                "title": "${config.title.brightness}",
                "type": "integer",
                "default": 0,
                "placeholder": 0,
                "maximum": 100,
                "description": "${config.description.brightness}"
            },
            "disableLogging": {
                "title": "${config.title.disableLogging}",
                "type": "boolean",
                "default": false,
                "description": "${config.description.resettable}"
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "legacyAccessories",
      "expandable": true,
      "title": "${config.title.legacyAccessories}",
      "description": "${config.description.legacyAccessories}",
      "type": "array",
      "items": [
        {
          "type": "fieldset",
          "items": [
            {
              "expandable": true,
              "title": "Legacy Accessory",
              "type": "fieldset",
              "items": [
                "legacyAccessories[].name",
                "legacyAccessories[].dimmer",
                {
                  "key": "legacyAccessories[].brightness",
                  "condition": {
                    "functionBody": "const index = arguments[1]; return model.legacyAccessories[index].dimmer === true;"
                  }
                },
                "legacyAccessories[].reverse",
                "legacyAccessories[].stateful",
                {
                  "key": "legacyAccessories[].time",
                  "condition": {
                    "functionBody": "const index = arguments[1]; return model.legacyAccessories[index].stateful !== true;"
                  }
                },
                {
                  "key": "legacyAccessories[].resettable",
                  "condition": {
                    "functionBody": "const index = arguments[1]; return model.legacyAccessories[index].stateful !== true;"
                  }
                },
                {
                  "key": "legacyAccessories[].random",
                  "condition": {
                    "functionBody": "const index = arguments[1]; return model.legacyAccessories[index].stateful !== true;"
                  }
                },
                "legacyAccessories[].disableLogging"
              ]
            }
          ]
        }
      ]
    }
  ]
}